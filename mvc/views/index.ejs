    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <div class="container">
        <div style="margin-right: 10%;">
            <div class="fogo"></div>
            <h1>Olá, <%= nome  %></h1>
            <p>
                <%= texto  %>
            </p>
        </div>      
